<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMVVMAprendices.View.DetalleAprendiz"
             Title="Detalle del aprendiz">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre"></Label>
            <Entry Text="{Binding Nombre}"></Entry>
            <Label Text="Apellido"></Label>
            <Entry Text="{Binding Apellido}"></Entry>
            <Label Text="Programa"></Label>
            <Entry Text="{Binding Programa}"></Entry>
            <Label Text="Ficha"></Label>
            <Entry Text="{Binding Ficha}"></Entry>
            <Label Text="Promedio"></Label>
            <Entry Text="{Binding Promedio}"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>